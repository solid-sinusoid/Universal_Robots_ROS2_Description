<?xml version="1.0"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:macro name="key_frame" params="name *origin">
    <link name="${name}"/>
    <joint name="${name}_joint" type="fixed">
        <parent link="world"/>
        <child link="${name}"/>
        <xacro:insert_block name="origin" />
    </joint>
  </xacro:macro>

